<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/nib_bg2">

    <!-- CardView for Change Password Form -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Change Password Title -->
            <TextView
                android:id="@+id/changePasswordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/ahadu_red1"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <!-- Username Input -->
            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="text"
                android:padding="12dp"
                android:backgroundTint="@color/gray_btn_bg_color"
                android:drawableLeft="@drawable/nib_account_24"
                android:drawablePadding="12dp"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <!-- Current Password Input -->
            <EditText
                android:id="@+id/currentPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:backgroundTint="@color/gray_btn_bg_color"
                android:drawableLeft="@drawable/nib_password_24"
                android:drawablePadding="12dp"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <!-- New Password Input -->
            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:backgroundTint="@color/gray_btn_bg_color"
                android:drawableLeft="@drawable/nib_password_24"
                android:drawablePadding="12dp"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <!-- Confirm Password Input -->
            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:backgroundTint="@color/gray_btn_bg_color"
                android:drawableLeft="@drawable/nib_password_24"
                android:drawablePadding="12dp"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <!-- Change Password Button -->
            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:backgroundTint="@color/ahadu_red1"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
