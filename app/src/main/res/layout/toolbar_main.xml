<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:animateLayoutChanges="true"
        android:background="@color/grey_card_background">


        <LinearLayout
            android:id="@+id/layout_nav_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/nav_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/hibret_navigation" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/hibret_pos_txt"
                android:textAllCaps="false"
                android:textColor="@color/hibret_bank2"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Hibir POS" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mada_log"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/hb_logo1" />
        <!-- Language User Type (Spinner) -->
        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_gravity="end|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:backgroundTint="@color/hibret_bank3" />

    </RelativeLayout>
</layout>