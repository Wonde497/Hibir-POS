<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FEB914" /> <!-- Color when pressed -->
            <corners android:radius="20dp" />  <!-- Match your corner radius -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Default color (white) -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
